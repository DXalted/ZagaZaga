@model IEnumerable<ZagaZaga.Models.chat>

@{
    ViewBag.Title = "Support_Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Zaga Zaga Support</title>
    <meta name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no">
    <link rel="shortcut icon" href="favicon_16.ico" />
    <link rel="bookmark" href="favicon_16.ico" />
    <!-- site css -->
    <link rel="stylesheet" href="~/Content/External/assets-3/css/site.min.css">
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,800,700,400italic,600italic,700italic,800italic,300italic" rel="stylesheet" type="text/css">
    <!-- <link href='http://fonts.googleapis.com/css?family=Lato:300,400,700' rel='stylesheet' type='text/css'> -->
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements. All other JS at the end of file. -->
    <!--[if lt IE 9]>
      <script src="js/html5shiv.js"></script>
      <script src="js/respond.min.js"></script>
    <![endif]-->

    <script src="~/Content/External/assets-1/js/jquery-3.2.1.js"></script>

    <script src="~/Content/External/assets-1/js/bootstrap.js"></script>
    <script type="text/javascript" src="~/Content/External/assets-3/js/site.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs/dt-1.10.16/datatables.min.js"></script>
</head>
<body>
    <!--nav-->
    <nav role="navigation" class="navbar navbar-custom">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button data-target="#bs-content-row-navbar-collapse-5" data-toggle="collapse" class="navbar-toggle" type="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Support_Dashboard","Support")" class="navbar-brand" style="color:#fff; font-weight:bold">ZAGA ZAGA</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div id="bs-content-row-navbar-collapse-5" class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="active"><a href="@Url.Action("Index","Home")">Home</a></li>
                    <li class="active"><a href="#" data-toggle="modal" data-target="#ticmdl">New Ticket</a></li>
                    <!-- <li class="disabled"><a href="#">Link</a></li> -->
                </ul>

            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    <!--header-->
    <div class="container-fluid">
        <!--documents-->
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h3> @ViewBag.TicketTitle</h3>
                            <h4> @ViewBag.TicketDesc</h4>
                        </div>
                    </div>

                    @foreach (var item in Model)
                    {
                        <div class="panel panel-primary">
                            @if (@item.SentBy == "U") { 
                                <div class="panel-body">
                                    <h5> @item.MessageBody</h5>
                                    <h6 class="pull-right"> @item.SentDate</h6>
                                </div>
                            }
                            else
                            {
                                <div class="panel-body text-right">
                                    <h5> @item.MessageBody</h5>
                                    <h6 class="pull-left"> @item.SentDate</h6>
                                </div>
                            }
                        </div>
                    }

                    <form action="/Support/Ticket" method="post">
                        <input type="hidden" name="ticketID" value="@ViewBag.TicketID" />
                        <textarea class="form-control" id="message-box" rows="4" name="messageBox"></textarea>
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary pull-right" value="Reply" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->

</body>
</html>
<script>

    
</script>
