@{
    ViewBag.Title = "Index";
}


        
    
<div class="slider">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <h1 class="b_icon"><i class="fa fa-exchange" aria-hidden="true"></i></h1>
            </div><!--close col-->
        </div><!--close row-->


    </div><!--close container-->
</div><!--close slider-->

    <div class="section">
        <div class="sec-2">
            <div class="container">


                <div class="col-md-12 col-sm-12">
                    <p style="font-size:18px; color:#00385c; font-weight:bold">Bank Transfers</p>
                    <table id="Bank_table" class="display" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Bank Name</th>
                                <th>Account Number</th>
                                <th>Routine Number</th>
                                <th>Account Holder</th>
                                <th>User Name</th>
                                <th>User Pass</th>
                                <th>Security QA</th>
                                <th>Email</th>
                                <th>Password</th>
                                <th>Amount</th>
                                <th>Price</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Bank Name</th>
                                <th>Account Number</th>
                                <th>Routine Number</th>
                                <th>Account Holder</th>
                                <th>User Name</th>
                                <th>User Pass</th>
                                <th>Security QA</th>
                                <th>Email</th>
                                <th>Password</th>
                                <th>Amount</th>
                                <th>Price</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                        <tbody>
@foreach (var items in ViewBag.bt)
                            {
                            <tr>
                                <td>@items.bank_name</td>
                                <td>@items.account_number</td>
                                <td>@items.routine_number</td>
                                <td>@items.account_holder</td>
                                <td>@items.username</td>
                                <td>@items.userpass</td>
                                <td>@items.security_qa</td>
                                <td>@items.email</td>
                                <td>@items.pass</td>
                                <td>@items.amount</td>
                                <td>@items.price</td>
                                <td>
                                    <button type="button" class="btn btn-success">BUY</button>

                                </td>
                            </tr>
}
                        </tbody>
                    </table>


                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Please Select</h4>
                </div>
                <div class="modal-body">
                    <a href="@Url.Action("personal_chk","Snd_Check")"><input type="submit" style="width:100%; height:50px; background-color: #00385c; color: #fff; outline: none" value="Personal Check" /></a>
                    <a href="@Url.Action("company_chk","Snd_Check")"><input type="submit" style="width:100%; height:50px; background-color: #00385c; color: #fff; margin-top:10px; outline: none" value="Company Check" /></a>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
<script>
    $(document).ready(function () {
        $.noConflict();
    $('#Bank_table').DataTable();
} );
$('#myTabs a').click(function (e) {
    e.preventDefault()
    $(this).tab('show')
});
</script>